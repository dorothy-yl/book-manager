/* pages/books/books.wxss */
page {
  background: linear-gradient(135deg, #848ad8 0%, #918be9 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 0;
}

/* 搜索栏样式 */
.search-section {
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  background: #07c160;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 分类标签样式 */
.category-tabs {
  background: white;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  padding: 0;
  min-width: 100%;
}

.tab {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 0;
  background: transparent;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab.active {
  background: transparent;
  color: #07c160;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.tab.active .tab-text {
  color: #07c160;
  font-weight: 600;
}

/* 书籍列表样式 */
.books-container {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
}

.books-list {
  padding: 0;
}

.book-card {
  display: flex;
  background: white;
  padding: 30rpx;
  margin-bottom: 2rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.book-card:active {
  background-color: #f9f9f9;
}

.book-card:last-child {
  border-bottom: none;
}

/* 书籍封面 */
.book-cover {
  flex-shrink: 0;
  margin-right: 30rpx;
}

.cover-image {
  width: 160rpx;
  height: 200rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 书籍信息 */
.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.book-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.book-actions {
  flex-shrink: 0;
}

.action-btn {
  padding: 8rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 32rpx;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.book-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.book-category {
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.category-text {
  font-size: 24rpx;
  color: #666;
}

.book-rating {
  display: flex;
  align-items: center;
}

.rating-text {
  font-size: 26rpx;
  color: #ff9500;
  font-weight: 500;
}

/* 进度条 */
.book-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160, #10ad6a);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* 状态标签 */
.book-status {
  align-self: flex-start;
}

.status-text {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-text.reading {
  background: #e3f2fd;
  color: #1976d2;
}

.status-text.finished {
  background: #e8f5e8;
  color: #388e3c;
}

.status-text.wishlist {
  background: #fff3e0;
  color: #f57c00;
}

.status-text.recommend {
  background: #f3e5f5;
  color: #7b1fa2;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(7, 193, 96, 0.3);
}

/* 浮动按钮样式 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(7, 193, 96, 0.3);
  transition: transform 0.3s ease;
  z-index: 1000;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 40rpx;
  color: white;
  font-weight: 300;
}
