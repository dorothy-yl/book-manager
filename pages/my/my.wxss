/* pages/my/my.wxss */
page {
  background: linear-gradient(135deg, #848ad8 0%, #918be9 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 0;
  width: 100%;
  padding: 10rpx 0;
}

/* 个人主页区域 */
.profile-section {
  padding: 20rpx 20rpx 0 20rpx;
  margin-bottom: 20rpx;
}

.profile-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
  width: 100vw ;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(52, 152, 219, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 60rpx;
}

.name-level-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 0;
}

.username {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 0;
}

.user-level {
  display: block;
  font-size: 20rpx;
  color: #7f8c8d;
  margin-bottom: 0;
}

.profile-stats {
  display: flex;
  justify-content: flex-start;
  gap: 40rpx;
  border-top: none;
  padding-top: 0;
  margin-left: 90rpx;
  margin-top: 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 18rpx;
  color: #7f8c8d;
}

/* 图书区域 */
.books-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.books-row {
  display: flex;
  gap: 15rpx;
  margin: 0 10rpx;
}

.book-category {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  max-width: calc(50% - 7.5rpx);
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.title-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
}

.category-more {
  display: flex;
  align-items: center;
  color: #3498db;
  font-size: 22rpx;
}

.more-text {
  margin-right: 6rpx;
}

.more-icon {
  font-size: 20rpx;
}

/* 图书滚动区域 */
.books-scroll {
  white-space: nowrap;
}

.books-container {
  display: flex;
  gap: 15rpx;
  padding: 8rpx 0;
}

.book-card {
  flex-shrink: 0;
  width: 160rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.book-card:active {
  transform: scale(0.98);
}

.book-cover-container {
  position: relative;
}

.book-cover {
  width: 100%;
  height: 220rpx;
}

.book-status {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #27ae60;
  color: white;
  font-size: 18rpx;
  padding: 3rpx 6rpx;
  border-radius: 8rpx;
}

.book-status.borrowed {
  background: #e74c3c;
}

.return-date {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 16rpx;
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.book-actions {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  display: flex;
  gap: 6rpx;
}

.action-btn {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.edit-btn {
  background: rgba(52, 152, 219, 0.9);
  color: white;
}

.delete-btn {
  background: rgba(231, 76, 60, 0.9);
  color: white;
}

.book-info {
  padding: 12rpx;
}

.book-title {
  display: block;
  font-size: 22rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  display: block;
  font-size: 18rpx;
  color: #7f8c8d;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-meta {
  display: flex;
  flex-direction: column;
  gap: 3rpx;
}

.borrow-count, .favorite-count {
  font-size: 16rpx;
  color: #7f8c8d;
}

.book-progress {
  margin-top: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 4rpx;
  background: #ecf0f1;
  border-radius: 2rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 16rpx;
  color: #7f8c8d;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.3);
}

/* 快捷功能区域 */
.quick-actions {
  padding: 0;
  margin-bottom: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  margin: 0 10rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 25rpx 15rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12rpx;
  font-size: 24rpx;
}

.add-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.scan-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.favorite-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.history-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: white;
}

.action-label {
  font-size: 20rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 菜单区域 */
.menu-section {
  padding: 0;
  margin-bottom: 20rpx;
}

.menu-group {
  background: white;
  border-radius: 0;
  margin-bottom: 0;
  overflow: hidden;
  box-shadow: none;
  margin: 0 10rpx;
}

.group-title {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e5e5e5;
  width: 700rpx;
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: rgba(52, 152, 219, 0.05);
}

.menu-icon {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 18rpx;
  font-size: 22rpx;
}

.profile-icon {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.notification-icon {
  background: rgba(241, 196, 15, 0.1);
  color: #f1c40f;
}

.privacy-icon {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.help-icon {
  background: rgba(155, 89, 182, 0.1);
  color: #9b59b6;
}

.about-icon {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.feedback-icon {
  background: rgba(230, 126, 34, 0.1);
  color: #e67e22;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 26rpx;
  color: #2c3e50;
  margin-bottom: 3rpx;
}

.menu-desc {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
}

.menu-badge {
  background: #e74c3c;
  color: white;
  font-size: 18rpx;
  padding: 3rpx 6rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.menu-arrow {
  font-size: 22rpx;
  color: #bdc3c7;
}

/* 退出登录区域 */
.logout-section {
  padding: 0;
  margin-bottom: 20rpx;
}

.logout-btn {
  width: 100%;
  background: rgba(231, 76, 60, 0.95);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 20rpx rgba(231, 76, 60, 0.3);
  transition: transform 0.3s ease;
  margin: 0 10rpx;
}

.logout-btn:active {
  transform: scale(0.98);
}