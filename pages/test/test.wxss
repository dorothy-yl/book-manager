/* pages/test/test.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #848ad8 0%, #918be9 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-primary:disabled {
  background: #ccc;
}

.btn-secondary {
  background: #34c759;
  color: white;
}

.btn-info {
  background: #5856d6;
  color: white;
}

.results {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.results-count {
  font-size: 24rpx;
  color: #666;
}

.test-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.test-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.test-item:last-child {
  border-bottom: none;
}

.test-info {
  flex: 1;
}

.test-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.test-time {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.test-result {
  margin-left: 20rpx;
}

.result-text {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: #f8f8f8;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-subtext {
  display: block;
  font-size: 24rpx;
  color: #ccc;
}

.loading-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #007aff;
}

.info-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 